<div class="registration-form">
<%= form_with(model: registration) do |form| %>
  <% if registration.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
        <% registration.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t("registrations.full_name"), style: "display: block" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, required: true %>
  </div>

  <div class="radio-group">
    <p><%= t("registrations.drink_package_22") %><span class="required">*</span></p>
    <div class="radio-options">
    <%= form.radio_button :drink_package_22, true, id: "drink_package_yes", required: true %>
    <%= form.label :drink_package22_yes, t("registrations.yes") %>
    <%= form.radio_button :drink_package_22, false, id: "drink_package_no", required: true %>
    <%= form.label :drink_package22_no, t('registrations.no') %>
    </div>
  </div>

  <div class="radio-group">
    <p><%= t("registrations.drink_package_23") %><span class="required">*</span></p>
    <div class="radio-options">
    <%= form.radio_button :drink_package_23, true, id: "drink_package_yes", required: true %>
    <%= form.label :drink_package23_yes, t('registrations.yes') %>
    <%= form.radio_button :drink_package_23, false, id: "drink_package_no", required: true %>
    <%= form.label :drink_package23_no, t('registrations.no') %>
    </div>
  </div>

  <div class="radio-group">
    <p><%= t("registrations.social") %><span class="required">*</span></p>
    <div class="radio-options">
    <%= form.radio_button :social_event, true, id: "social_event_yes", required: true %>
    <%= form.label :social_event_yes, t('registrations.yes') %>
    <%= form.radio_button :social_event, false, id: "social_event_no", required: true %>
    <%= form.label :social_event_no, t('registrations.no') %>
    </div>
  </div>

  <div class="radio-group">
    <p><%= t("registrations.lunch") %><span class="required">*</span></p>
    <div class="radio-options">
    <%= form.radio_button :lunch, true, id: "lunch_yes", required: true %>
    <%= form.label :lunch_yes, t('yes') %>
    <%= form.radio_button :lunch, false, id: "lunch_no", required: true %>
    <%= form.label :lunch_no, t('no') %>
    </div>
  </div>

  <div>
    <%= form.submit t("registrations.register"), class: "submit-button" %>
  </div>
<% end %>
</div>